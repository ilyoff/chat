*
  box-sizing border-box
  font-family Roboto, sans-serif

.page
  display flex
  flex-direction column
  height 100vh
  margin 0
  padding 0

.page__header
  position relative
  width 100%
  height 50px
  padding 0 20px
  background #fff
  border-bottom 1px solid #ccc

.content
  max-width 900px
  min-width 320px
  margin 0 auto

.page__content
  display flex
  align-items stretch
  height calc(100vh - 50px)
  padding-bottom 1px


.link
  font-size 15px
  color #0059B2
  text-decoration underline
  transition all .5s
  cursor pointer

  &:hover
    color rgba(@color, .75)
    text-decoration none

  &_small
    font-size 12px

.btn
  display inline-block
  background #eee
  padding 5px
  border 1px solid #111
  border-radius 3px
  cursor pointer
  transition all .5s

  &_primary
    background #0059B2
    border 1px solid #ccc
    color #eee

    &:hover
      background darken(#0059B2, 30%)

    &[disabled]
      opacity .5


.spinner
  display inline-block
  margin 5px
  text-align center

  & > div
    width 5px
    height 5px
    background-color #444
    border-radius 100%
    display inline-block
    animation sk-bouncedelay 1.4s infinite ease-in-out both
    animation sk-bouncedelay 1.4s infinite easeout both

  .bounce1
    animation-delay -0.32s
    animation-delay -0.32s

  .bounce2
    animation-delay -0.16s
    animation-delay -0.16s

@keyframes sk-bouncedelay {
  0%, 80%, 100% {
    transform: scale(0);
  } 40% {
    transform: scale(1.0);
  }
}



.label
  display inline-block
  margin 0 10px 5px 0
  padding 5px
  border-radius 3px
  font-size 12px
  color #fff

.label_info
  background #0944

.label_danger
  background #f00

.label_small
  padding 3px
  font-size 10px
  font-weight bold

.label__close
  float right
  margin-left 10px
  color #eee
  cursor pointer

.hamburger
  display inline-block
  width 40px
  height 50px
  margin 0
  margin-right 20px
  padding 0
  background none
  border none
  color #333
  font-size 40px
  vertical-align middle

  @media (min-width: 850px)
    display none

  @media (max-width: 850px)
    display inline-block

