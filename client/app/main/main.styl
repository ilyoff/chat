
.page
  background #f0f0f0
  height 100vh
  margin 0
  padding 0

.page__header
  position relative
  width 100%
  height 50px
  background #fff
  border-bottom 1px solid #000

.content
  max-width 900px
  min-width 320px
  margin 0 auto

.page__content
  height calc(100vh - 50px)
  background #000

